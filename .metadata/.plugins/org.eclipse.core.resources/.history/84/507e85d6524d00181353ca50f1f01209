import java.awt.Color;
import java.awt.Graphics;
import java.awt.Image;
import java.io.File;
import javax.imageio.ImageIO;

public class Alien extends MovingThing
{
	private int speed;
	private Image image;
	private int shootCounter=0;
	private int shootThreshold = 100+(int)(20*Math.random());
	public Alien()
	{
		this(0,0,0);
	}

	public Alien(int x, int y)
	{
		this(x,y,0);
	}

	public Alien(int x, int y, int s)
	{
		super(x, y);
		speed=s;
		try
		{
			image = ImageIO.read(new File(System.getProperty("C:/Users/eppersonl1493/Desktop/APCSA/Unit17-2016/Unit17-2016/Assignments-starfighter" + "alien.jpg")));
		}
		catch(Exception e)
		{
			//feel free to do something here
			System.out.println("good");
		}
	}
	public boolean willShoot(){
		if(shootCounter>shootThreshold){
			shootCounter =0;
			return true;
		}
		else{
			shootCounter++;
			return false;
		}
	}


	public void setSpeed(int s)
	{
	   //add code
		speed =s ;
	}

	public int getSpeed()
	{
	   return speed;
	}

	public void draw( Graphics window )
	{
		window.drawImage(image,getX(),getY(),80,80,null);
	}

	public String toString()
	{
		return "";
	}
}
